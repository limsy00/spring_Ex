<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.example.lesson04.mapper.UserMapper">
 	<insert id="insertUser" parameterType="map">
		INSERT INTO `new_user`
		(
			`name`
			,`yyyymmdd`
			,`email`
			,`introduce`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{name}
			, #{yyyymmdd}
			, #{email}
			, #{introduce}
			, NOW()
			, NOW()
		)	
 	</insert>
 	
 	<select id="selectLatestUser" resultType="com.example.lesson04.domain.User">
 		SELECT
 			`id`
 			,`name`
			,`yyyymmdd`
			,`email`
			,`introduce`
			,`createdAt`
			,`updatedAt`
		FROM 
			`new_user`
		ORDER BY `id` DESC
		LIMIT 1	
 	</select>
 	
 	<!-- Lesson06Ex02Controller - AJAX로 아이디 중복확인 쿼리 -->
 	<select id="isDuplicationByName" parameterType="string" resultType="boolean">
 	<!-- count 결과 값을 boolean으로?? [10진수: 0이 아니면 true, 0이면 false] -->
 		SELECT
	 		COUNT(*)
		FROM 
			`new_user`
		WHERE 
			`name` = #{name}
 	</select>
 </mapper>